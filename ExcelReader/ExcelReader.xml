<?xml version="1.0" encoding="UTF-8"?>
<project name="excelreader" default="all">
  
  
  <property file="ExcelReader.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.commons-collections4-4.1.classpath">
    <pathelement location="${basedir}/commons-collections4-4.1.jar"/>
  </path>
  
  <path id="library.jcifs-1.3.19.classpath">
    <pathelement location="${basedir}/jcifs-1.3.19.jar"/>
  </path>
  
  <path id="library.poi-3.17.classpath">
    <pathelement location="${basedir}/poi-3.17.jar"/>
  </path>
  
  <path id="library.poi-excelant-3.17.classpath">
    <pathelement location="${basedir}/poi-excelant-3.17.jar"/>
  </path>
  
  <path id="library.poi-ooxml-3.17.classpath">
    <pathelement location="${basedir}/poi-ooxml-3.17.jar"/>
  </path>
  
  <path id="library.poi-ooxml-schemas-3.17.classpath">
    <pathelement location="${basedir}/poi-ooxml-schemas-3.17.jar"/>
  </path>
  
  <path id="library.xmlbeans-2.6.0.classpath">
    <pathelement location="${basedir}/xmlbeans-2.6.0.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module ExcelReader -->
  
  <dirname property="module.excelreader.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.excelreader" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.excelreader" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.excelreader" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.excelreader" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="excelreader.output.dir" value="${module.excelreader.basedir}/out/production/ExcelReader"/>
  <property name="excelreader.testoutput.dir" value="${module.excelreader.basedir}/out/test/ExcelReader"/>
  
  <path id="excelreader.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="excelreader.module.production.classpath">
    <path refid="${module.jdk.classpath.excelreader}"/>
    <path refid="library.jcifs-1.3.19.classpath"/>
    <path refid="library.poi-3.17.classpath"/>
    <path refid="library.poi-excelant-3.17.classpath"/>
    <path refid="library.poi-ooxml-3.17.classpath"/>
    <path refid="library.poi-ooxml-schemas-3.17.classpath"/>
    <path refid="library.xmlbeans-2.6.0.classpath"/>
    <path refid="library.commons-collections4-4.1.classpath"/>
  </path>
  
  <path id="excelreader.runtime.production.module.classpath">
    <pathelement location="${excelreader.output.dir}"/>
    <path refid="library.jcifs-1.3.19.classpath"/>
    <path refid="library.poi-3.17.classpath"/>
    <path refid="library.poi-excelant-3.17.classpath"/>
    <path refid="library.poi-ooxml-3.17.classpath"/>
    <path refid="library.poi-ooxml-schemas-3.17.classpath"/>
    <path refid="library.xmlbeans-2.6.0.classpath"/>
    <path refid="library.commons-collections4-4.1.classpath"/>
  </path>
  
  <path id="excelreader.module.classpath">
    <path refid="${module.jdk.classpath.excelreader}"/>
    <pathelement location="${excelreader.output.dir}"/>
    <path refid="library.jcifs-1.3.19.classpath"/>
    <path refid="library.poi-3.17.classpath"/>
    <path refid="library.poi-excelant-3.17.classpath"/>
    <path refid="library.poi-ooxml-3.17.classpath"/>
    <path refid="library.poi-ooxml-schemas-3.17.classpath"/>
    <path refid="library.xmlbeans-2.6.0.classpath"/>
    <path refid="library.commons-collections4-4.1.classpath"/>
  </path>
  
  <path id="excelreader.runtime.module.classpath">
    <pathelement location="${excelreader.testoutput.dir}"/>
    <pathelement location="${excelreader.output.dir}"/>
    <path refid="library.jcifs-1.3.19.classpath"/>
    <path refid="library.poi-3.17.classpath"/>
    <path refid="library.poi-excelant-3.17.classpath"/>
    <path refid="library.poi-ooxml-3.17.classpath"/>
    <path refid="library.poi-ooxml-schemas-3.17.classpath"/>
    <path refid="library.xmlbeans-2.6.0.classpath"/>
    <path refid="library.commons-collections4-4.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.excelreader">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.excelreader">
    <patternset refid="excluded.from.module.excelreader"/>
  </patternset>
  
  <path id="excelreader.module.sourcepath">
    <dirset dir="${module.excelreader.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.excelreader" depends="compile.module.excelreader.production,compile.module.excelreader.tests" description="Compile module ExcelReader"/>
  
  <target name="compile.module.excelreader.production" depends="register.custom.compilers" description="Compile module ExcelReader; production classes">
    <mkdir dir="${excelreader.output.dir}"/>
    <javac2 destdir="${excelreader.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.excelreader}/javac">
      <compilerarg line="${compiler.args.excelreader}"/>
      <bootclasspath refid="excelreader.module.bootclasspath"/>
      <classpath refid="excelreader.module.production.classpath"/>
      <src refid="excelreader.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.excelreader"/>
    </javac2>
    
    <copy todir="${excelreader.output.dir}">
      <fileset dir="${module.excelreader.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.excelreader.tests" depends="register.custom.compilers,compile.module.excelreader.production" description="compile module ExcelReader; test classes" unless="skip.tests"/>
  
  <target name="clean.module.excelreader" description="cleanup module">
    <delete dir="${excelreader.output.dir}"/>
    <delete dir="${excelreader.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.excelreader" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.excelreader" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>